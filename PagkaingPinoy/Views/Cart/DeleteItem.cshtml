@{
}

<div class="form-class position-relative">
    <form method="post" asp-action="DeleteItem" enctype="multipart/form-data" class="form-container position-absolute top-50 start-50 translate-middle">
        <input type="hidden" value="Id" id="Id" />
        <div class="single-style mb-3">
            <label asp-for="DishName">Dish Name</label>
            <input type="text" asp-for="DishName" disabled>
        </div>

        <div class="single-style mb-3">
            <label asp-for="Price">Price</label>
            <div class="flex">
                <span class="currency">₱</span>
                <input asp-for="Price" disabled>
            </div>
        </div>

        <div class="single-style quantity-style mb-3">
            <label asp-for="Quantity">Count</label>
            <input asp-for="Quantity" disabled>
        </div>

        <div class="single-style mb-3">
            <label asp-for="Price">Subtotal</label>
            <div class="flex">
                <span class="currency">₱</span>
                <input asp-for="Subtotal" disabled>
            </div>
        </div>

        <button type="button" class="button-submit btn btn-primary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="button-submit btn btn-primary">Delete Item</button>
    </form>
</div>

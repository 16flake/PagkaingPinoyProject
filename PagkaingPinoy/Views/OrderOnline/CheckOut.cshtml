@using PagkaingPinoy.ViewModel;
@model OrderHistoryViewModel

<div class="form-class position-relative">
    <form method="post" asp-action="CheckOut" class="form-container position-absolute top-50 start-50 translate-middle">

        <div class="single-style quantity-style mb-3">
            <label asp-for="OrderDetail">Number of Items in your cart</label>
            <input asp-for="OrderDetail" readonly>
        </div>

        <div class="single-style mb-3">
            <label asp-for="Total">Total Amount to Pay</label>
            <div class="flex">
                <span class="currency">₱</span>
                <input asp-for="Total" readonly>
            </div>
        </div>

        <button type="button" class="button-submit btn btn-primary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="button-submit btn btn-primary">Check Out</button>
    </form>
</div>

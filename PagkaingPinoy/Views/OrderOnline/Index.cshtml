                            </div>

                            <div class="addToCart-container">
                                <a class="add-button" type="button" asp-action="AddToCart" asp-controller="OrderOnline" asp-route-id="@item.Id">Add to cart</a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="starter-container single-container">
            <h2 id="sideDish-width">
                Side Dish

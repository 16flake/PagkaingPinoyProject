<div class="album bg-body-tertiary">
    <div class="container">
        <div class="starter-container single-container">
            <h2>
                Starter
            </h2>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model)
                {
                    @if (item.Category == "Starter")
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                <img class="dish-image bd-placeholder-img card-img-top" src="~/img/DishImage/@(item.DishAbbreviation).jpeg"/>
                            </div>

                            <div class="dish-details-container">
                                <h3>
                                    @item.DishName
                                </h3>
                                <p>
                                    ₱@(item.Price).00
                                </p>
                            </div>

                            <div class="addToCart-container">
                                <a class="add-button" type="button" asp-action="AddToCart" asp-controller="OrderOnline" asp-route-id="@item.Id">Add to cart</a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="starter-container single-container">
            <h2>
                Main
            </h2>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
